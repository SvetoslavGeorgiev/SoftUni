@model EditSchoolUserViewModel

@{
    ViewBag.Title = "Редакция на профила на училището";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
   <form asp-area="School" asp-controller="SchoolUser" asp-action="EditSchoolProfile" method="post">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="text-center mb-3">
            <label asp-for="@Model.SchoolName">Име на училището</label>
            <input class="form-control" autocomplete="SchoolName" aria-required="true" asp-for="@Model.SchoolName" />
            <span asp-validation-for="@Model.SchoolName" class="text-danger"></span>
        </div>
        <div class="text-center mb-3">
            <label asp-for="@Model.Email">Email на училището</label>
            <input class="form-control" autocomplete="Email" aria-required="true" asp-for="@Model.Email" />
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
        </div>
        <div class="text-center mb-3">
            <label asp-for="@Model.Password">Парола</label>
            <input class="form-control" type="password" autocomplete="new-password" aria-required="true" asp-for="@Model.Password" />
            <span asp-validation-for="@Model.Password" class="text-danger"></span>
        </div>
        <div class="text-center mb-3">
            <label asp-for="@Model.ConfirmPassword">Потвърждаване на паролата</label>
            <input class="form-control" type="password" autocomplete="new-password" aria-required="true" asp-for="@Model.ConfirmPassword" />
            <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="text-center">
            <button id="registerSubmit" type="submit" class="btn btn-primary">Промени</button>
        </div>
    </form>
    <form asp-area="School" asp-controller="SchoolUser" asp-action="Delete" asp-route-id="@Model.Id">
        <div>
               <input  type="submit" onclick="myConfirm(event)" value="Премахни" class="btn btn-danger " />
        </div>
    </form>
</div>

@section Scripts {
            <partial name="_ValidationScriptsPartial" />
                <script>
                    function myConfirm(e) {
                        e.preventDefault();
                        Swal.fire({
                            title: 'Сигурни ли сте?',
                            text: "Това е необратим процес!",
                            icon: 'warning',
                            showCancelButton: true,
                            cancelButtonText: 'Отмени',
                            confirmButtonColor: '#3085d6',
                            cancelButtonColor: '#d33',
                            confirmButtonText: 'Да, премахни!'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                Swal.fire(
                                    'Премахнато!',
                                    'Вашия профил беше изтрит.',
                                    'Изтрито'
                                ).then((resultDeleted) => {
                                    e.target.parentElement.parentElement.submit();
                                })
                            }
                        })
                    }
                </script>
}

