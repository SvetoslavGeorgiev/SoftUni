@model IEnumerable<SoupViewModel>

@{
    ViewBag.Title = "Супи";
}

<style>
    .hoverme {
        background-color: limegreen;
    }

        .hoverme:hover {
            background-color: lime;
            color: red;
        }
</style>

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @foreach (var soup in Model)
    {
        <div class="myCard_card card col-4" style="width: 20rem; margin-right: 7px; margin-bottom: 7px;">
            <img class="myCrad_img card-img-top" style="width: 18rem;"
                 src="@soup.ImageUrl" alt="Book Image">
            <div class="card-body">
                <h5 class="card-Name mt-1">@soup.Name</h5>
                <p class="mb-0">Ingredients: @soup.Ingredients</p>
                <p class="mb-0">Allergens: @soup.Allergens</p>
            </div>
            @if (User.IsInRole(School))
            {

                <div class="mb-3">
                    <a asp-controller="Meal" asp-action="EditSoup" asp-route-soupId="@soup.Id" class="fs-6 btn  hoverme mb-3 p-2">Редактирай</a>
                </div>
            }

        </div>
    }
</div>