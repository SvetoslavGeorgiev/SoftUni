@model IEnumerable<DessertViewModel>

@{
    ViewBag.Title = "Десерти";
}

<style>
.hoverme{
  background-color: limegreen;
}

.hoverme:hover{
  background-color: lime;
  color: red;
}
</style>

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @foreach (var dessert in Model)
    {
         <div class="card col-4" style="width: 20rem; margin-right: 7px; margin-bottom: 7px;">
                <img class="card-img-top" style="width: 18rem;"
                 src="@dessert.ImageUrl" alt="Book Image">
                <div class="card-body">
                    <h5 class="card-Name mt-1">@dessert.Name</h5>
                    <p class="mb-0">Ingredients: @dessert.Ingredients</p>
                    <p class="mb-0">Allergens: @dessert.Allergens</p>
                </div>
                @if (User.IsInRole(School))
                {
                     <div class="mb-3">
                           <a asp-controller="Meal" asp-action="EditDessert" asp-route-dessertId="@dessert.Id" class="fs-6 btn  hoverme mb-3 p-2">Редактирай</a>
                    </div>
                }
         </div>
    }
</div>