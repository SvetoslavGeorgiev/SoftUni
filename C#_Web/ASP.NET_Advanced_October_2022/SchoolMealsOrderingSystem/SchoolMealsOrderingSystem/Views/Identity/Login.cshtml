@{
    ViewData["Title"] = "Log in";
}

<style>
 body {
  background-image: url(https://media.istockphoto.com/id/499888635/photo/school-caferteria-line.jpg?s=1024x1024&w=is&k=20&c=6Yg3cI39srqisvrVRq0mCTZfj6barOJkPzQSLzTTLqY=);
  background-size: cover;
}


.light-blue-element {
  background-color: cyan;
}
.light-blue-element:hover {
  background-color: blue;
  color: wheat;
}

.hoverme{
  background-color: limegreen;
}

.hoverme:hover{
  background-color: lime;
  color: red;
}
</style>

 <div class="container">
      <div class="d-grid gap-2 mb-2">
          <a asp-area="Parent" asp-controller="ParentUser" asp-action="Login" class="btn light-blue-element">Вход за родители</a>
      </div>
       <div class="d-grid gap-2 mb-2">
          <a asp-area="School" asp-controller="SchoolUser" asp-action="Login" class="btn hoverme">Вход за училища</a>
      </div>
</div>
