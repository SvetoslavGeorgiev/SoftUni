@model IEnumerable<ChildViewModel>

@{
    ViewBag.Title = Localizer[LayoutTitleName];
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @foreach (var child in Model)
    {
        <div class="card col-4" style="width: 20rem; margin-right: 7px; margin-bottom: 7px; background-color: honeydew">
            <div class="image-content" style="padding: 15px">
                <div class="card-image">
                    <img src="@child.ImageUrl" alt="" class="avoid-clicks card-img" style="padding: 2px">
                </div>
            </div>
            <div class="card-body" style="padding: 10px">
                
                <h5 class="card-title mt-1" style="color: darkgreen">@child.FirstName @child.LastName</h5>
                @if (@child.MonthsOld != 0)
                {
                    <p class="mb-2" style="color: darkviolet">@Localizer[Age]: @child.YearsOld @Localizer[YearsOfTheChild] @Localizer[And] @child.MonthsOld @Localizer[MonthsOfTheChild]</p>
                }
                else
                {
                    <p class="mb-2" style="color: darkviolet">@Localizer[Age]: @child.YearsOld @Localizer[YearsOfTheChild]</p>
                }
                <p class="mb-0" style="color: coral">@Localizer[SchoolName]: @child.School</p>
                <p class="mb-0" style="color: darkblue">@Localizer[YearInSchool]: @child.YearInSchool</p>
            </div>
            <div class="mb-3">
                <a asp-controller="DailyMenu" asp-action="All" asp-route-childId="@child.Id" class="fs-6 btn btn-outline-primary mb-3 p-2">@Localizer[SeeChosenMenu]</a>
            </div>
        </div>
    }
</div>